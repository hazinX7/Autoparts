@model autoparts.Models.User

@{
    ViewData["Title"] = "Профиль";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card profile-card">
                <div class="card-header bg-primary text-white py-3">
                    <h2 class="card-title mb-0 text-center">
                        <i class="bi bi-person-circle me-2"></i>Профиль пользователя
                    </h2>
                </div>
                <div class="card-body p-4">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <div class="profile-info mb-4">
                                <h5 class="text-muted mb-3">
                                    <i class="bi bi-person me-2"></i>Основная информация
                                </h5>
                                <div class="mb-3">
                                    <label class="form-label text-muted">Имя пользователя</label>
                                    <div class="form-control-plaintext">@Model.Username</div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-muted">Email</label>
                                    <div class="form-control-plaintext">@Model.Email</div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-muted">Роль</label>
                                    <div class="form-control-plaintext">
                                        <span class="badge bg-@(Model.Role == "Admin" ? "danger" : "primary")">
                                            @Model.Role
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="profile-balance mb-4">
                                <h5 class="text-muted mb-3">
                                    <i class="bi bi-wallet2 me-2"></i>Финансы
                                </h5>
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <label class="form-label text-muted">Текущий баланс</label>
                                        <h3 class="mb-0 @(Model.Balance > 0 ? "text-success" : "text-danger")">
                                            @Model.Balance.ToString("C")
                                        </h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="profile-actions">
                        <h5 class="text-muted mb-3">
                            <i class="bi bi-gear me-2"></i>Действия
                        </h5>
                        <div class="d-flex justify-content-center gap-3">
                            <div class="d-grid" style="flex: 1; max-width: 200px;">
                                <a asp-controller="Account" asp-action="ChangePassword" 
                                   class="btn btn-outline-primary">
                                    <i class="bi bi-key me-2"></i>Сменить пароль
                                </a>
                            </div>
                            <div class="d-grid" style="flex: 1; max-width: 200px;">
                                <a asp-controller="Balance" asp-action="Index" class="btn btn-outline-success">
                                    <i class="bi bi-wallet2 me-2"></i>Пополнить баланс
                                </a>
                            </div>
                            <div class="d-grid" style="flex: 1; max-width: 200px;">
                                <a href="/Order/History" class="btn btn-outline-info">
                                    <i class="bi bi-clock-history me-2"></i>История заказов
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <button onclick="confirmLogout()" class="btn btn-danger">
                            <i class="bi bi-box-arrow-right me-2"></i>Выйти из аккаунта
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmLogout() {
            Swal.fire({
                title: 'Выход из аккаунта',
                text: 'Вы действительно хотите выйти?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Да, выйти',
                cancelButtonText: 'Отмена'
            }).then((result) => {
                if (result.isConfirmed) {
                    logout();
                }
            });
        }
    </script>
} 